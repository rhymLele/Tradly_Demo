<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Home.screens.HomeActivity">

<androidx.viewpager2.widget.ViewPager2
    android:id="@+id/viewpager2_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@+id/bottom_nav" />

<com.google.android.material.bottomnavigation.BottomNavigationView
    android:id="@+id/bottom_nav"
    android:backgroundTint="@color/AcliceBlue"
    android:background="@color/AcliceBlue"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:itemIconTint="@color/color_custom"
    app:itemTextColor="@color/color_custom"
    android:layout_alignParentBottom="true"
    app:menu="@menu/menu_home"/>
</RelativeLayout>